<Window x:Class="MyFirstApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFirstApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <TextBlock DockPanel.Dock="Top">Dock = "Top"</TextBlock>
            <TextBlock DockPanel.Dock="Bottom">Dock = "Bottom"</TextBlock>
            <TextBlock DockPanel.Dock="Left">Dock = "Left"</TextBlock>
            <TextBlock Background="White">This Texbox "fills" the remaining space.</TextBlock>
        </DockPanel>
    </Grid>
</Window>
