<Window x:Class="DockPanleWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockPanleWindows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Background="Aqua">Usando Ttop</TextBlock>
        <TextBlock DockPanel.Dock="Right" Background="Green">Usando Right</TextBlock>
        <TextBlock DockPanel.Dock="Left" Background="Red">Usando Left</TextBlock>
        <TextBlock DockPanel.Dock="Bottom" Background="Blue">Usando Button</TextBlock>
        <Label Background="Black" Foreground="White">Un Ejemplo</Label>
    </DockPanel>
</Window>
