<Window x:Class="Controllers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Controllers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!--Border solo nos permite agregar una elemento dentro de el-->
    <Border Background="LightBlue"
            BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="45"
            Padding="25"
            Margin="10"
            >
        <StackPanel>
            <!--StackPanel Nos permite agrupar controladores de manera vertical-->
            <Button Name="BuletDecoratorButon" Click="BuletDecoratorButon_Click">BulletDecorator</Button>
            <Button Name="CanvasButton" Click="CanvasButton_Click" Margin="0,5,0,0">Canvas</Button>
            <Button Name="ExpanderButton" Click="ExpanderButton_Click" Margin="0,5,0,0">Expander</Button>
            <Button Name="GridButton" Click="GridButton_Click" Margin="0,5,0,0">Grid</Button>
        </StackPanel>
    </Border>
</Window>
