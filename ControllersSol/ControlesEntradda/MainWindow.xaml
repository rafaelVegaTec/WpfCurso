<Window x:Class="ControlesEntradda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlesEntradda"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBox Name="TXTmYtEXTbOX">Escribe Algo</TextBox>
        <Button Click="Button_Click">Cambia Texto</Button>
        <Separator/>
        <RichTextBox Name="rtbMtRichTextBox">
            <FlowDocument>
                <Paragraph>
                    <Run>Escribe algo...</Run>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Separator/>
        <PasswordBox Name="pbxMyPassBox" MaxLength="64" PasswordChar="*" PasswordChanged="pbxMyPassBox_PasswordChanged"/>
    </StackPanel>
</Window>
